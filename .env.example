# Токен бота (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# Часовой пояс (по умолчанию Asia/Bangkok)
TZ_NAME=Asia/Bangkok

# Путь к файлу базы данных (по умолчанию tasks.db в корне проекта)
# Для продакшн-деплоя лучше вынести за пределы проекта:
# DB_PATH=/var/lib/todo-bot/tasks.db
DB_PATH=tasks.db

# Максимум открытых задач на чат (0 = без ограничения)
MAX_TASKS_PER_CHAT=100
